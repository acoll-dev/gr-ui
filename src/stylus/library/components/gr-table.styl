[gr-repeat]
    display none
.gr-table-wrapper
    max-width 100%
    overflow-x auto
.ng-table-pager
    .pagination
        margin 0
.gr-table
    position relative
    width 100%
    padding 15px
    margin 0
    &.ng-table
    .ng-table
        min-width 500px
        margin 0
        padding 0
        thead
            background #FFFFFF
            tr
                th
                    min-width 55px
                    text-align center
                    vertical-align middle
                    kits(touch-callout, none)
                    kits(user-select, none)
                    &.sortable
                        cursor pointer
                        div
                            padding-right 18px
                            position relative
                            &:after
                            &:before
                                content ""
                                border-width 0 4px 4px
                                border-style solid
                                border-color #000 transparent
                                visibility visible
                                right 8px
                                top 50%
                                position absolute
                                kits(opacity, .3)
                                margin-top -4px
                            &:before
                                margin-top 2px
                                border-bottom none
                                border-left 4px solid transparent
                                border-right 4px solid transparent
                                border-top 4px solid #000
                            &:hover:after
                            &:hover:before
                                kits(opacity, 1)
                                visibility visible
                        &.sort-desc
                        &.sort-asc
                            background-color rgba(0, 0, 0, 0.05)
                            text-shadow 0 1px 1px rgba(255, 255, 255, 0.75)
                        &
                        &.sort-desc divafter
                        &.sort-asc divafter
                            margin-top -2px
                        &.sort-desc divbefore
                        &.sort-asc divbefore
                            visibility hidden
                        &.sort-asc
                            div
                                &:after
                                &:hover:after
                                    visibility visible
                                    kits(opacity, .6)
                        &.sort-desc
                            div
                                &:after
                                    border-bottom none
                                    border-left 4px solid transparent
                                    border-right 4px solid transparent
                                    border-top 4px solid #000
                                    visibility visible
                                    kits(box-shadow, none)
                                    kits(opacity, .6)
                    &.filter
                        .input-filter
                            margin 0
                            display block
                            width 100%
                            min-height 30px
                            font-weight normal
                            kits(box-sizing, border-box)
                + .pagination
                    margin-top 0
        tbody
            tr
                position relative
                &[class*='bg-']
                    td
                        background none
                td
                    min-width 55px
                    vertical-align middle
                    .btn-table
                        width 80%
        tfoot
            > tr
                > td
                    padding 10px
                    background #F0F0F0
                    .ng-table-pager
                        position relative
                        display table
                        width 100%
                        .ng-table-pagination
                            position relative
                            display table
                            float none !important
                            margin 0 auto
        td
        th
            &.col-1
                width (100%/12)*1 !important
            &.col-2
                width (100%/12)*2 !important
            &.col-3
                width (100%/12)*3 !important
            &.col-4
                width (100%/12)*4 !important
            &.col-5
                width (100%/12)*5 !important
            &.col-6
                width (100%/12)*6 !important
            &.col-7
                width (100%/12)*7 !important
            &.col-8
                width (100%/12)*8 !important
            &.col-9
                width (100%/12)*9 !important
            &.col-10
                width (100%/12)*10 !important
            &.col-11
                width (100%/12)*11 !important
            &.col-12
                width (100%/12)*12 !important
        &.table-hover
            > tbody
                > tr
                    &:hover
                        > td
                        > th
                            background rgba(0,0,0,.05)
        &.table-no-pager
            tfoot
                > tr
                    > td
                        padding 6px
                        .ng-table-pager
                            display none !important
body
    .gr-table-count
        .btn.btn-default
            color #428bca
            box-shadow none
            outline none
            border solid 1px #DDDDDD
            border-right none
            &:last-child
                border-right solid 1px #DDDDDD
                kits(transition, none)
            &:hover
            &:active
            &:focus
                color #2a6496
                background-color #EEEEEE
            &.active
                background #428bca
                border-color #428bca
                color #FFFFFF
                cursor default
                z-index 3
                &:hover
                    background #428bca
                    border-color #428bca
                    color #FFFFFF
    .gr-table-pager
        display table
        .pagination
            position relative
            display table
            margin 0
            padding 0
            overflow hidden
            li
                display block
                float left
