.gr-alert
	position fixed
	max-width 100%
	top 10px
	right 0
	padding 0 10px
	font-size 14px
	font-family "Arial", sans-serif
	box-shadow none
	z-index 90000
	.alert
		position relative
		display table
		float right
		padding 5px
		margin 0
		color #FFFFFF
		box-shadow none
		&.alert-success
			border-color darken($success, 5%)
			background $success
		&.alert-info
			border-color darken($info, 5%)
			background $info
		&.alert-warning
			border-color darken($warning, 5%)
			background $warning
		&.alert-danger
			border-color darken($danger, 5%)
			background $danger
		.gr-alert-icon
			position relative
			float left
			padding 0 10px
			margin-left -5px
			font-size 2.25em
			color rgba(0,0,0,.2)
		.close
			position relative
			float right
			display block
			line-height 45px
			text-shadow none
			padding 0 10px
			color rgba(0,0,0,.2)
			opacity 1
			font-size 1.25em
			transition color .3s
			&:befor,
			&:after
				content " "
				display table
				clear both
			&:hover
				opacity 1
				color rgba(255,255,255,1)
		> p
			display table
			float left
		> ul
			display table
			float left
			padding 12px 10px 10px
			margin 0 !important
			li
				position relative
				width 100%
				margin-bottom 5px
				list-style none
				&:last-child
					margin-bottom 0
