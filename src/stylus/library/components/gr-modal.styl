.modal-open
    min-width 320px
    overflow-x auto
    .modal
        min-width 320px
        .modal-dialog
            font-size 0.875rem
            .modal-content
                border-radius 0
            &.modal-xs
                width 300px
                max-width 300px
                margin 10px auto
            &.modal-sm
                width 768px
                max-width 768px
                margin 10px auto
                @media (max-width 991px)
                    width auto !important
                    max-width none
                    margin 10px
            &.modal-lg
                @media (max-width 1199px)
                    width auto !important
                    margin 10px
            &.modal-responsive
                width auto
                margin 10px
    .modal-backdrop
        min-width 320px
