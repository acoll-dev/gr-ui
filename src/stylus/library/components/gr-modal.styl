.modal-open
    min-width 320px
    overflow-x auto
    .modal
        min-width 320px
        .modal-dialog
            font-size 0.875rem
            .modal-content
                border-radius 0
            &.modal-xs
                width 300px
                max-width 300px
                margin 30px auto
                @media (max-width 310px)
                    width auto !important
                    max-width none
                    margin 10px
            &.modal-sm
                width 500px
                max-width 500px
                margin 30px auto
                @media (max-width 520px)
                    width auto !important
                    max-width none
                    margin 10px
            &.modal-md
                width 768px
                max-width 768px
                margin 30px auto
                @media (max-width 787px)
                    width auto !important
                    max-width none
                    margin 10px
            &.modal-lg
                width 900px
                max-width 900px
                margin 30px auto
                @media (max-width 920px)
                    width auto !important
                    max-width none
                    margin 10px
            &.modal-responsive
                width auto
                margin 10px
    .modal-backdrop
        min-width 320px
