.gr-form-required-label
	height 34px
	padding 6px 12px
	font-size 14px
	line-height 1.42857143
	color #555
	border 1px solid #ccc
	box-shadow -4px 0 0 0 darken($error-lighten, 54.5%) !important
.modal .gr-autofields
	margin 0 -15px
	.row
		margin-left 0
		margin-right 0
		padding-left 15px
		padding-right 15px
		~ [class*="col-"]
			padding-left 15px
			padding-right 15px
.gr-autofields
	position relative
	display block
	&:before
	&:after
		display table
		content " "
	&:after
		clear both
.autofields
	position relative
	display block
	margin 0
	label
		color #000000
		font-weight normal
	.btn
		border-radius 0
	.input-group-addon
		border-radius 0
	.form-group
		&
		> [class*="col-"]
			> .btn
				border-radius 0
			>.input-group
				> .input-group-btn,
				> .input-group-addon
					border-radius 0
				> .btn
					border-radius 0
		.form-control
			border-radius 0
			box-shadow none !important
			kits(transition, border-color ease-in-out .15s)
		.input-group
			.form-control
				box-shadow none !important
		&.required
			.form-control
				box-shadow -4px 0 0 0 darken($error-lighten, 54.5%) !important
			.input-group
				box-shadow -4px 0 0 0 darken($error-lighten, 54.5%) !important
				.form-control
					box-shadow none !important
		&.has-error
			.input-group-addon
				display table-cell
				background desaturate(darken($error-lighten, 5%), 25%)
				border-color darken($error-lighten, 10%)
			.checkbox
			.gr-form-list
			.form-control
				background $error-lighten
				border-color darken($error-lighten, 10%)
				border-left-color  darken($error-lighten, 12%)
				box-shadow -4px 0 0 0 darken($error-lighten, 54.5%) !important
				.gr-form-list-item
					border-color darken($error-lighten, 10%)
				&:focus
					border-color darken($error-lighten, 30%)
					box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 6px darken($error-lighten, 10%)
			.input-group
				box-shadow -4px 0 0 0 darken($error-lighten, 54.5%) !important
				.form-control
					box-shadow none !important
		&.has-success
			.input-group-addon
				display table-cell
				background desaturate(darken($success-lighten, 5%), 25%)
				border-color darken($success-lighten, 10%)
			.checkbox
			.gr-form-list
			.form-control
				background $success-lighten
				border-color darken($success-lighten, 10%)
				border-left-color  darken($success-lighten, 12%)
				box-shadow -4px 0 0 0 darken($success-lighten, 64.5%) !important
				.gr-form-list-item
					border-color darken($success-lighten, 10%)
				&:focus
					border-color darken($success-lighten, 30%)
					box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 6px darken($success-lighten, 10%)
			.input-group
				box-shadow -4px 0 0 0 darken($success-lighten, 64.5%) !important
				.form-control
					box-shadow none !important
	.form-control
		&:hover
			background #F9F9F9
		&:focus
		&:active
			background #FFFFFF
	.checkbox
		.form-control
			padding-left 30px
	.textarea
		textarea
			max-width 100%
			resize vertical
	.form-button
		margin-top 25px
		@media screen and (max-width 767px)
			&.col-xs-12
				margin-top 0
	.form-hr
		hr
			margin-top 10px
			margin-bottom 10px
		+ .form-label
			label
				margin-top 10px
		> [class*="col-"]
			&.form-label
				label
					margin-bottom 20px
					color #000000
					font-weight bold
	.row
		margin-bottom 0
		> [class*="col-"]
			.checkbox
				margin-bottom 15px
				margin-top 25px
			.form-group
				margin-bottom 0
			[class*="col-"]
				padding-left 0
				padding-right 0
			@media screen and (max-width 767px)
				padding 0
			@media screen and (min-width 768px)
				&:first-child
					padding-left 0
				&:last-child
					padding-right 0
		~ [class*="col-"]
			padding-left 0
			padding-right 0
	> .form-group
	> .row
		margin 0
		margin-top 15px
		margin-bottom 15px
		&:first-child
			margin-top 0
	> .form-group
		&[class*="col-"]
			margin-top 0
			&.checkbox
				margin-bottom 15px
				margin-top 25px
	.date
		position relative
		.input-group
			.dropdown-menu
				padding 5px
				border-radius 0
				table
					thead
						tr
							th
								padding 2.5px
								padding-bottom 5px
					tbody
						tr
							td
								padding 2px
					&:focus
						outline 0
				li:last-child
					display inline-block
					width 100%
					margin-bottom -5px
					padding 5px 2.5px 2.5px !important
	&.form-horizontal
		.checkbox
			padding 0
			.control-label
				text-align left
	&:before
	&:after
		display table
		content " "
	&:after
		clear both
	@media screen and (max-width 768px)
		.row
			[class*="col-"]
				.form-group
					padding-bottom 15px
		> .form-group
			margin-top 0
		> .row
			margin-top 0
			margin-bottom 0

.ta-hidden-input
	width 1px
	height 1px
	border none
	margin 0
	padding 0
	position absolute
	top -10000px
	left -10000px
	kits(opacity, 0)
	overflow hidden

.ta-toolbar
	margin -10px -5px 0
	padding 5px 0
	.btn-group
		margin 5px

.ta-root
	position relative
	display block
	width 100%
	padding 10px
	background #F6F6F6
	border solid 1px #E9E9E9
	&.focussed
		.form-control
			background #FFFFFF
		> .ta-scroll-window.form-control
			border-color #66afe9
			outline 0
			kits(box-shadow, inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6))
	.ta-editor.ta-html
	.ta-scroll-window.form-control
		min-height 300px
        height auto
		max-height 500px
		overflow auto
		font-family inherit
		font-size 100%
	.ta-scroll-window
		overflow auto
		&.form-control
			position relative
			padding 0
		> .ta-bind
			display table
			width 100%
			height 100%
			padding 6px 12px
	.ta-editor
		&:focus
			user-select text
	.ta-resizer-handle-overlay
		z-index 100
		position absolute
		display none
	.ta-resizer-handle-overlay
		> .ta-resizer-handle-info
			position absolute
			bottom 16px
			right 16px
			border 1px solid black
			background-color #FFF
			padding 0 4px
			kits(opacity, .7)
		> .ta-resizer-handle-background
			position absolute
			bottom 5px
			right 5px
			left 5px
			top 5px
			border 1px solid black
			background-color rgba(0, 0, 0, 0.2)
		> .ta-resizer-handle-corner
			width 10px
			height 10px
			position absolute
		> .ta-resizer-handle-corner-tl
			top 0
			left 0
			border-left 1px solid black
			border-top 1px solid black
		> .ta-resizer-handle-corner-tr
			top 0
			right 0
			border-right 1px solid black
			border-top 1px solid black
		> .ta-resizer-handle-corner-bl
			bottom 0
			left 0
			border-left 1px solid black
			border-bottom 1px solid black
		> .ta-resizer-handle-corner-br
			bottom 0
			right 0
			border 1px solid black
			cursor se-resize
			background-color white
	.popover
		position absolute
		top 0
		left 0
		z-index 1060
		display none
		max-width 276px
		padding 1px
		font-size 14px
		font-weight normal
		line-height 1.42857143
		text-align left
		white-space normal
		background-color #fff
		-webkit-background-clip padding-box
		background-clip padding-box
		border 1px solid #ccc
		border 1px solid rgba(0, 0, 0, .2)
		border-radius 6px
		kits(box-shadow, 0 5px 10px rgba(0, 0, 0, .2))
		&.top
			margin-top -10px
		&.bottom
			margin-top 10px
		.popover-title
			padding 8px 14px
			margin 0
			font-size 14px
			background-color #f7f7f7
			border-bottom 1px solid #ebebeb
			border-radius 5px 5px 0 0
		.popover-content
			padding 9px 14px
		> .arrow
			border-width 11px
			&
			&:after
				position absolute
				display block
				width 0
				height 0
				border-color transparent
				border-style solid
			&:after
				content ""
				border-width 10px
		&.top
			> .arrow
				bottom -11px
				left 50%
				margin-left -11px
				border-top-color #999
				border-top-color rgba(0, 0, 0, .25)
				border-bottom-width 0
				&:after
					bottom 1px
					margin-left -10px
					content " "
					border-top-color #fff
					border-bottom-width 0
		&.bottom
			> .arrow
				top -11px
				left 50%
				margin-left -11px
				border-top-width 0
				border-bottom-color #999
				border-bottom-color rgba(0, 0, 0, .25)
				&:after
					top 1px
					margin-left -10px
					content " "
					border-top-width 0
					border-bottom-color #fff
