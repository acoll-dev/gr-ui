$color-input-bg = #FFFFFF
$color-input-bg-disabled = #F6F6F6

$color-border = #E0E0E0
$color-border-focus = #B9B9B9

$color-placeholder = #CCCCCC

$color-label-small = #999999
$color-label-large = #999999

$color-addon-bg = $color-border
$color-addon-text = #666666

$color-required = darken(#FDE9E9, 25%)

$error-color-border = darken(#FDE9E9, 20%)
$error-color-border-focus = darken(#FDE9E9, 30%)
$error-color-icon = $error-color-border

$success-color-border = darken(#D6FADD, 20%)
$success-color-border-focus = darken(#D6FADD, 30%)
$success-color-icon = $success-color-border

$size-input-height = 56px
$size-input-padding = 15px
$size-input-border = 3px
$size-input-border-radius = 6px

$size-label-small = .6rem
$size-label-large = .875rem

@import 'gr-autofields/base'
@import 'gr-autofields/autofields'
@import 'gr-autofields/required-label'
@import 'gr-autofields/fields/*'
