.ta-hidden-input
    width 1px
    height 1px
    border none
    margin 0
    padding 0
    position absolute
    top -10000px
    left -10000px
    kits(opacity, 0)
    overflow hidden
.autofields
    .form-group
        &.html
            .success-icon
            .error-icon
                position absolute
                top ($size-input-padding)
                right ($size-input-padding + 7px)
                kits(opacity, 0)
                kits(transition, all .1s)
                z-index 2
            .success-icon
                color $success-color-icon
            .error-icon
                color $error-color-icon
            label
                position absolute
                top 12px
                left 30px
                color $color-label-large
                font-size $size-label-large
                kits(opacity, .8)
            .ta-toolbar
            	margin -10px -5px 0
            	padding 5px 0
            	.btn-group
            		margin 5px
            .ta-root
                position relative
                display block
                width 100%
                padding 40px 10px 10px
                background #F6F6F6
                border solid $size-input-border $color-border
                border-radius $size-input-border-radius
                &.focussed
                    .ta-editor
                        background #FFFFFF !important
                        border-color $color-border-focus
                        box-shadow none
                        outline 0
                .ta-editor
                    position relative
                    width 100%
                    height 300px !important
                    padding 0
                    overflow auto
                    font-family inherit
                    font-size 100%
                    border solid $size-input-border $color-border
                    border-radius $size-input-border-radius
                    background darken(#FFFFFF, 1%) !important
                    &:focus
                        user-select text
                    .ta-bind
                        height 100%
                        min-height 0
                        padding 12px
                        &:focus
                        :focus
                            outline none
                    &.ta-html
                        padding 0
                        .CodeMirror
                            height 300px - ($size-input-border * 2)
                        &:focus
                        :focus
                            outline none
                    .ta-scroll-window
                        overflow auto
                        padding 0 !important
            &.required
                .ta-root
                    border-left-color $color-required
            &.has-success
                label
                    color $color-label-large
                .success-icon
                    kits(opacity, 1)
                .ta-root
                    border-color $success-color-border
                    &.focussed
                        .ta-editor
                            border-color $success-color-border
            &.has-error
                label
                    color $color-label-large
                .error-icon
                    kits(opacity, 1)
                .ta-root
                    border-color $error-color-border
                    &.focussed
                        .ta-editor
                            border-color $error-color-border
